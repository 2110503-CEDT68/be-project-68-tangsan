	"item": [
		{
			"name": "1. User Registration (Validation Check - Negative)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 400 when missing password\", function () {",
							"    pm.response.to.have.status(400);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [{"key": "Content-Type", "value": "application/json"}],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"Test User\",\n    \"tel\": \"0812345678\",\n    \"email\": \"testuser_validation@gmail.com\",\n    \"role\": \"user\"\n}"
				},
				"url": "http://127.0.0.1:5000/api/v1/auth/register"
			}
		},
		{
			"name": "2. User Registration (Success)",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"var randomId = Math.floor(Math.random() * 100000);",
							"pm.collectionVariables.set(\"userEmail\", \"user\" + randomId + \"@gmail.com\");"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Token is returned\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.collectionVariables.set(\"userToken\", jsonData.token);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [{"key": "Content-Type", "value": "application/json"}],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"Test User\",\n    \"tel\": \"0812345678\",\n    \"email\": \"{{userEmail}}\",\n    \"password\": \"123456\",\n    \"role\": \"user\"\n}"
				},
				"url": "http://127.0.0.1:5000/api/v1/auth/register"
			}
		},
